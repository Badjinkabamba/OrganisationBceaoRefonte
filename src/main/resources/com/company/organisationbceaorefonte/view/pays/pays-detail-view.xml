<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://paysDetailView.title"
      focusComponent="form">
    <data>
        <instance id="paysDc"
                  class="com.company.organisationbceaorefonte.entity.Pays">
            <fetchPlan extends="_base"/>
            <loader id="paysDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="paysDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="libelleField" property="libelle"/>
            <textField id="codeIso2Field" property="codeIso2"/>
            <textField id="codeIso3Field" property="codeIso3"/>
            <checkbox id="isUemoaField" property="isUemoa"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
